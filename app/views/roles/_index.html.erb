<% @roles.each do |role| %>
  <tr>
  	<td><%= role.role_name %></td>
  	<td><%= role.role_desc %></td>
  	<td style="text-align:center">
    	<%= link_to edit_role_path(role), class: "btn btn-primary btn-sm", remote: true, html:{style: "color:#FFFFFF"} do %><span class="fa fa-edit"></span> Ubah<% end %>
    	<%= link_to del_role_path(role), class: "btn btn-danger btn-sm", remote: true, html:{style: "color:#FFFFFF"} do %><span class="fa fa-trash"></span> Hapus<% end %> </td>
  </tr>
<% end %>