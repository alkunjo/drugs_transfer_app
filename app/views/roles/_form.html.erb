<%= form_for @role, remote: true, html: {style: "display:inline;"} do |f| %>
    <% if @role.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@role.errors.count, "error") %> prohibited this tipe role from being saved:</h2>

        <ul>
        <% @role.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <div class="row">
        <div class="col-md-1">
          <%= f.label :nama_role, class: "control-label" %><br>
        </div>
        <div class="col-md-3">
          <%= f.text_field :role_name, class: "form-control" %>
        </div>
        <div class="col-md-1">
          <%= f.label :deskripsi, class: "control-label" %><br>
        </div>
        <div class="col-md-4">
          <%= f.text_field :role_desc, class: "form-control" %>
        </div>
        <div class="col-md-1" style="padding-top: 8px">
          <%= f.submit (f.object.new_record? ? "Tambah" : "Ubah"), class: "btn btn-sm btn-primary" %>
        </div>
        <div class="col-md-1" style="padding-top: 8px">
          <%= link_to 'Batal', new_role_path, class: "btn btn-sm btn-default", remote: true %>
        </div>
      </div>
    </div>
<% end %>