<%= form_for @ss_period, remote: true, html: {style: "display:inline;"} do |f| %>
    <% if @ss_period.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@ss_period.errors.count, "error") %> prohibited this tipe ss_period from being saved:</h2>

        <ul>
        <% @ss_period.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <div class="row">
        <div class="col-md-2">
          <%= f.label :periode, class: "control-label" %><br>
        </div>
        <div class="col-md-4">
          <%= select_month(Date.today, {use_month_names: %w(Januari Februari Maret April Mei Juni Juli Agustus September Oktober November Desember)}, {class: '.form-control'}) %>
        </div>
        <div class="col-md-1" style="padding-top: 8px">
          <%= f.submit (f.object.new_record? ? "Tambah" : "Ubah"), class: "btn btn-sm btn-primary" %>
        </div>
        <div class="col-md-1" style="padding-top: 8px">
          <%= link_to 'Batal', new_ss_period_path, class: "btn btn-sm btn-default", remote: true %>
        </div>
      </div>
    </div>
<% end %>