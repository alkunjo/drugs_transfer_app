<%= form_for @user, remote: true, html: {style: "display:inline;"} do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this tipe user from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <div class="row">
        <div class="col-md-2">
          <%= f.label :username, class: "control-label" %><br>
        </div>
        <div class="col-md-4">
          <%= f.text_field :user_name, class: "form-control" %>
        </div>
        <div class="col-md-2">
          <%= f.label :nama_lengkap, class: "control-label" %><br>
        </div>
        <div class="col-md-4">
          <%= f.text_field :user_fullname, class: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-2">
          <%= f.label :alamat, class: "control-label" %><br>
        </div>
        <div class="col-md-4">
          <%= f.text_field :user_address, class: "form-control" %>
        </div>
        <div class="col-md-2">
          <%= f.label :telepon, class: "control-label" %><br>
        </div>
        <div class="col-md-4">
          <%= f.text_field :user_phone, class: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-2">
          <%= f.label :email, class: "control-label" %><br>
        </div>
        <div class="col-md-4">
          <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="col-md-2">
          <%= f.label :password, class: "control-label" %><br>
        </div>
        <div class="col-md-4">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2">
          <%= f.label :outlet, class: "control-label" %><br>
        </div>
        <div class="col-md-3">
          <%= f.collection_select :outlet_id, @outlets, :id, :outlet_name, {prompt: "Pilih satu"}, {class: "form-control"} %>
        </div>
        <div class="col-md-2">
          <%= f.label :peran, class: "control-label" %><br>
        </div>
        <div class="col-md-3">
          <%= f.collection_select :role_id, @roles, :id, :role_name, {prompt: "Pilih satu"}, {class: "form-control"} %>
        </div>
        <div class="col-md-1" style="padding-top: 8px">
          <%= f.submit (f.object.new_record? ? "Tambah" : "Ubah"), class: "btn btn-sm btn-primary" %>
        </div>
        <div class="col-md-1" style="padding-top: 8px">
          <%= link_to 'Batal', new_user_path, class: "btn btn-sm btn-default", remote: true %>
        </div>
      </div>
    </div>
<% end %>